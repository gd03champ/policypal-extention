{
  "manifest_version": 2,
  "name": "PolicyPal",
  "version": "1.0",
  "description": "Your Smart Companion for Terms & Privacy Analysis üîç",
  "permissions": ["activeTab", "storage", "tabs", "contextMenus", "https://*/"],
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "files/icon16.png",
      "48": "files/icon48.png",
      "128": "files/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "web_accessible_resources": ["progress.html"],
  "icons": {
    "16": "files/icon16.png",
    "48": "files/icon48.png",
    "128": "files/icon128.png"
  }
}
